{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "styles/*": ["styles/*"]
    },
    "lib": [
      "es2015",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "module": "es6",
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false
  },
  "include": ["src"]
}
